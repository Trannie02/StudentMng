doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
        title Create Student
    body.bg-light.card.shadow.p-4(style="width: 400px;")
      h1.mb-4.text-center(style="color: green") Create Student 
      if errors 
        div
          ul 
            each err in errors 
              li=err.msg
      form(action="/student/create" , method="post" , enctype="multipart/form-data") 
        div.mb-3
          label(for="name") Name
          input.form-control#name(name="name")  
          if errors 
            each err in errors
              if err.path=='name'
                span.error=err.msg
        div.mb-3
          label(for="age") Age
          input.form-control#age(name="age" type="number")  
          if errors 
            each err in errors
              if err.path=='age'
                span.error=err.msg
        div.mb-3
          label(for="email") Email
          input.form-control#email(name="email" type="email")  
          if errors 
            each err in errors
              if err.path=='email'
                span.error=err.msg
        div.mb-3
          label(for="bio") Bio
          input.form-control#bio(name="bio")  
          if errors 
            each err in errors
              if err.path=='bio'
                span.error=err.msg
        div.mb-3
          label(for="image") Image
          input.form-control#image(name="image" type="file")  
          if errors 
            each err in errors
              if err.path=='image'
                span.error=err.msg
        div.mb-3.text-center
          button.btn.btn-outline-success(type="submit") Create